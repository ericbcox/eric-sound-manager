<%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :format %><br>
      <%= f.text_area :format %>
    </p>

    <p>
      <%= f.label :length %><br>
      <%= f.text_area :length %>
    </p>

    <p>
      <%= f.label :size %><br>
      <%= f.text_area :size %>
    </p>

    <p>
      <%= f.submit %>
      </p>
<% end %>
<%= link_to 'Back', posts_path %>
